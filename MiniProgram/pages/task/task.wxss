page {
  background-color: #EEEEEE;
  display: flex;
  flex-direction: column;
}
.task {
  display: flex;
  flex-direction: column;
}
.header {
  height: 50rpx;
  font-size: 15px;
  color: rgba(76, 71, 71, 0.87);
}
.bottom {
  height: 50rpx;
  font-size: 15px;
  color: rgba(76, 71, 71, 0.87);
  text-align: center;
}
.task-item {
  background-color: #FFFFFF;
  height: 50px;
  margin: 8px 8px 8px 8px;
  border-radius: 5px;
  box-shadow: 0px 1px 2px 1px #CCCCCC;
  padding: 5px;
  position: relative;
}
.task-item-title { 
  width: 100%;
  text-align: center;
}
.task-item-content {
  position: absolute;
  bottom: 0px;
  padding: 5px;
  font-size: 12px;
  color: grey;
}

::-webkit-scrollbar {
width: 4px;
height: 6px;
background-color: #ffffff;
}
/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
  /*-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,0.3);*/
  border-radius: 10px;
  background-color: #EEEEEE;
  /*display: none;*/
}
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
border-radius: 10px;
-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.3);
background-color: #EEEEEE;
}
