page {
  background-color: #EEEEEE;
  display: flex;
  flex-direction: column;
}
.task-item {
  background-color: #FFFFFF;
  height: 50px;
  margin: 8px 8px 8px 8px;
  border-radius: 5px;
  box-shadow: 0px 1px 2px 1px #CCCCCC;
  padding: 5px;
  position: relative;
}
.task-item-title { 
  text-align: center;
}
.task-item-content {
  position: absolute;
  bottom: 0px;
  padding: 5px;
  font-size: 12px;
  color: grey;
}