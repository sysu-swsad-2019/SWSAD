/* pages/registerPage/registerPage.wxss */
.container{
  margin-top: 35%;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.usernameIcon, .passwordIcon, .confirmIcon{
  width: 64rpx;
  height: 64rpx;
  margin-left: 20rpx
  
}
.usernameInput, .passwordInput, .confirmInput{
  margin-left: 20rpx
}

.usernameInputView, .passwordInputView, .confirmInputView{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 100rpx;
  background-color: lightgray;
  border-radius: 100rpx;
  margin-bottom: 30rpx
}

.registerButton{
  margin-top: 10rpx;
  width: 500rpx;
  height: 100rpx;
  border-radius: 100rpx;
}