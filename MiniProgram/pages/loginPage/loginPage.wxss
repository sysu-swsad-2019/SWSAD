/* pages/loginPage/loginPage.wxss */
.container{
  margin-top: 25%;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatarImage{
  margin-bottom: 50rpx;
  width: 192rpx;
  height: 192rpx;
}

.usernameIcon, .passwordIcon{
  width: 64rpx;
  height: 64rpx;
  margin-left: 20rpx
}
.usernameInput, .passwordInput{
  margin-left: 20rpx
}

.usernameInputView, .passwordInputView{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 100rpx;
  background-color: lightgray;
  border-radius: 100rpx;
  margin-bottom: 30rpx
}

.loginButton{
  margin-top: 10rpx;
  width: 500rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.forgetPasswordText{
  text-decoration: underline;
  text-decoration-color: gray;
  font-size: 30rpx;
  margin-top: 30rpx
}

.registerButton{
  font-size: 30rpx;
  text-decoration: underline;
  text-decoration-color: gray;
  margin-top: 200rpx;
}