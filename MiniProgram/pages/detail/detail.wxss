page {
  background-color: #EEEEEE;
}
.task {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  height: 1120rpx;
  margin: 8px 8px 8px 8px;
  border-radius: 5px;
  box-shadow: 0px 1px 2px 1px #CCCCCC;
  position: relative;
}
.task-title {
  height: 60rpx;
  border-bottom: solid 1px #CCCCCC;
  padding: 5px;
  text-align: center;
}
.task-content {
  height: 850rpx;
  border-bottom: solid 1px #CCCCCC;
}
.task-host {
  padding: 10px;
  height: 100rpx;
  border-bottom: solid 1px #CCCCCC;
  font-size: 15px;
}
.task-button {
  height: 150rpx;
  padding: 5px;
  position: relative;
}
.button-hover {
  color: #e8f0de !important;
  background: linear-gradient(to bottom, #7db72f, #4e7d0e) !important; 
}
.buttons {
  color: #606060;
  border: solid 1px #b7b7b7;
  background:  linear-gradient(to bottom, #fff, #ededed);
}

::-webkit-scrollbar {
width: 4px;
height: 6px;
background-color: #ffffff;
}
/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
  -webkit-box-shadow: inset 0 0 10px rgba(0,0,0,0.3);
  border-radius: 10px;
  background-color: #FFFFFF;
  display: none;
}
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
border-radius: 10px;
-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.3);
background-color: #EEEEEE;
}
